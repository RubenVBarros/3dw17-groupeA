<!DOCTYPE html>

{% block import_css %}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
{% endblock %}

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/">Accueil</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarText">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="/sujet">Forum <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item active">
            {% if is_granted('ROLE_ADMIN') %}
            <a href="/admin/dashboard/" class="nav-link">Dashboard</a>
            {% endif %}
        </li>
      </ul>
      <ul class="navbar-nav mr-1">
        <li class="nav-item active">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
            <a href="/login" class="nav-link">Se connecter</a>
            {% else %}
            <a href="/register" class="nav-link">Créer un compte</a>
            {% endif %}
        </li>
      </ul>
    </div>
</nav>

<title>Sujet n°{{sujet.id}}</title>

{% block body %}

<style>
    h1,a,h4,label{
        display: flex;
        justify-content: center;
        text-align: center;
    }
    p{
        margin-left: 2%;
        border-left: 5px solid red;
        background-color: lightgrey;
    }
    .btn{
        margin:0 auto;
        display:block;
    }
    input,textarea{
        width: 50%;
        margin: 0 auto;
        display: block;
    }
    #commentaire_save{
        margin:0 auto;
        display:block;
    }
</style>

    <h1>Sujet n°{{sujet.id}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sujet.id }}</td>
            </tr>
            <tr>
                <th>Titre du sujet</th>
                <td>{{ sujet.titre}}</td>
            </tr>
            <tr>
                <th>DatePost</th>
                <td>{{ sujet.datePost ? sujet.datePost|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ sujet.auteur}}</td>
            </tr>
        </tbody>
    </table>

    <p>{{sujet.message}}</p>

    <div class="btn-group mr-2" role="group" aria-label="Second group">
        <a href="{{path('reaction-toggle',{'type':'like','sujet':sujet.id})}}" class="btn btn-outline-success">👍{% if likes > 0 %} {{likes}}{% endif %}</a>
        <a href="{{path('reaction-toggle',{'type':'dislike','sujet':sujet.id})}}" class="btn btn-outline-danger">👎{% if dislikes > 0 %} {{dislikes}}{% endif %}</a>
    </div>
    
    <h4>Commentaires :</h4>
    {% for commentaire in commentaires %}
        <p>{{commentaire.auteur.username}} : {{ commentaire.contenu }}</p>
    {% endfor %}
    <h4>Ajouter un commentaire :</h4>
    {{form(form)}}
    {% for label, messages in app.flashes(['success', 'warning']) %}
    {% for message in messages %}
        <div class="alert alert-{{ label }}">
            {{ message }}
        </div>
    {% endfor %}
{% endfor %}
    <br>
    <a href="{{ path('sujet_index') }}">Retour à la liste des sujets</a>
    <br>
    <a href="{{ path('sujet_edit', {'id': sujet.id}) }}">Modifier le sujet</a>
    <br>
    {{ include('sujet/_delete_form.html.twig') }}
{% endblock %}
