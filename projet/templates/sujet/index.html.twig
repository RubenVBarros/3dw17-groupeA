<!DOCTYPE html>

{% block import_css %}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
{% endblock %}

<title>Liste des sujets</title>

{% block body %}
    <h1>Liste des sujets :</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Auteur</th>
                <th>DatePost</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sujet in sujets %}
            <tr>
                <td>{{ sujet.id }}</td>
                <td>{{ sujet.auteur }}</td>
                <td>{{ sujet.datePost ? sujet.datePost|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('sujet_show', {'id': sujet.id}) }}">Voir ce sujet</a>
                    <a href="{{ path('sujet_edit', {'id': sujet.id}) }}">Modifier le sujet</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun sujets trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('sujet_new') }}">Créer un nouveau sujet</a>
{% endblock %}
